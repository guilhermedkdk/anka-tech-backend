ENV=dev

# Database (URL assíncrona para a aplicação)
DATABASE_URL=postgresql+asyncpg://invest:investpw@db:5432/investdb

# URL exclusiva para MIGRAÇÕES (driver sync)
# Se rodar migrações DENTRO do Docker:
