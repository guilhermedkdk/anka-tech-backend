# --- Database ---
DATABASE_URL=postgresql+asyncpg://invest:investpw@db:5432/investdb

# URL exclusiva para MIGRAÇÕES (driver sync)
# Se rodar migrações DENTRO do Docker:
DATABASE_SYNC_URL=postgresql://invest:investpw@db:5432/investdb
# Se rodar migrações NO HOST usando a porta exposta:
# DATABASE_SYNC_URL=postgresql://invest:investpw@localhost:5432/investdb

# --- Redis/Cache ---
REDIS_URL=redis://redis:6379/0
CACHE_TTL_SECONDS=3600  # 1h

# --- Auth ---
JWT_SECRET=secret
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60 # access token expira em 1h
REFRESH_TOKEN_EXPIRE_MINUTES=43200 # refresh token expira em 30 dias

# --- Admin seed ---
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=changeme

# --- Yahoo Finance ---
YAHOO_BASE_URL=https://query1.finance.yahoo.com
YAHOO_TIMEOUT_SECONDS=8
YAHOO_RETRIES=3
YAHOO_BACKOFF_MULTIPLIER=0.8
YAHOO_BACKOFF_MIN=0.5
YAHOO_BACKOFF_MAX=4.0
